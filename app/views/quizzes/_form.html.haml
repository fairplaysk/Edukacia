= semantic_form_for @quiz do |f|
  -if @quiz.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quiz.errors.count, "error")} prohibited this quiz from being saved:"
      %ul
        - @quiz.errors.full_messages.each do |msg|
          %li= msg

  = f.inputs :name => 'Quiz' do
    = f.input :name
    = f.input :comment
    = f.input :categories, :label => 'Categories'#, :include_blank => true, :multiple => false, :input_html => { :size => 1 }
    = f.input :sponsor
    - index = 1
    = f.inputs :for => :placement_comments do |placement_comment|
      = render 'placement_comment_fields', :placement_comment => placement_comment, :index => index, :f => f
      - index += 1
    = f.commit_button 'Add placement comment', :button_html => {:name => 'add_placement_comment', :class => 'add_placement_comment'}
    = f.input :funny_comment
  / = f.inputs :name => 'Questions', :for => :questions do |questions_form|
  /   = render 'question_fields', :f => questions_form
  /   = link_to_add_fields "Add Question", f, :questions
  .actions
    = f.submit 'Save'