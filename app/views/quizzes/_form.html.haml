= semantic_form_for @quiz do |f|
  -if @quiz.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quiz.errors.count, "error")} prohibited this quiz from being saved:"
      %ul
        - @quiz.errors.full_messages.each do |msg|
          %li= msg

  = f.inputs :name => 'Quiz' do
    = f.input :name
    = f.input :comment
    = f.input :categories
    = f.input :sponsor
    = f.inputs :content, :name => 'Placement comment #%i', :for => :placement_comments
    = f.input :funny_comment
  / = f.inputs :name => 'Questions', :for => :questions do |questions_form|
  /   = render 'question_fields', :f => questions_form
  /   = link_to_add_fields "Add Question", f, :questions
  .actions
    = f.submit 'Save'