#test_header
	#test_categories= @quiz.categories.first.name
	#test_names= @quiz.name
	#question_meter
		.background
			.meter 2 / 10

= semantic_form_for  @quiz, :as =>:submission, :url => submissions_url(:quiz_id => @quiz.id), :html => { :method => :post } do |f|
	= f.inputs :for => :questions, :class => 'quiz_question_container' do |q|
		#question= q.object.content
		#answers
			= q.input :answers, :as => :radio, :collection => q.object.answers, :label => false
	#sub_area
		= f.submit :value => 'Skip', :class => 'skip_button'
		= f.submit :value => 'Submit', :class => 'next_button'