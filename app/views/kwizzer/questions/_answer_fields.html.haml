.content
	= f.input :content, :input_html => {:disabled => (quiz_active rescue false)}
.radio_group
	= label_tag f.object_name.gsub(/\[(\d+|\w+)\]$/,'')+"[is_correct][#{$1}]", 'Correct', :style => 'display:none;'
	= radio_button_tag f.object_name.gsub(/\[(\d+|\w+)\]$/,'')+'[is_correct]', (f.object_name.match(/\[(\d+|\w+)\]$/)[1] if f.object_name.match(/\[(\d+|\w+)\]$/)), f.object.is_correct?, :disabled => (quiz_active rescue false)
	= f.input :is_correct, :as => :hidden, :value => 0
	= label_tag f.object_name.gsub(/\[(\d+|\w+)\]$/,'')+"[is_funny][#{$1}]", 'Funny', :style => 'display:none;'
	= radio_button_tag f.object_name.gsub(/\[(\d+|\w+)\]$/,'')+'[is_funny]', (f.object_name.match(/\[(\d+|\w+)\]$/)[1] if f.object_name.match(/\[(\d+|\w+)\]$/)), f.object.is_funny?, :disabled => (quiz_active rescue false)
	= f.input :is_funny, :as => :hidden, :value => 0
= f.input :_destroy, :as => :hidden
= f.commit_button "- ##{index}", :button_html => {:name => 'remove_answer', :class => 'remove'} if (!quiz_active rescue true)