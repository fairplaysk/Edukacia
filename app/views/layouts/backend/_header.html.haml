#logo
	%h1
		= link_to 'Kwizzer_logo', root_path
#usernav
	- if user_signed_in?
		= t('.signed_in', :username => current_user.username)
		= link_to t('.sign_out'), destroy_user_session_path
	- else
		= link_to t('.sign_in'), new_user_session_path
#locale_switcher
	%ul
		%li= link_to "Slovenčina", set_locale_path('sk')
		%li= link_to "English", set_locale_path('en')
	